<h1>Articles#index</h1>
<p>Find me in app/views/articles/index.html.erb</p>

<div>
<%= link_to "log out",  destroy_user_session_path, data: {turbo_method: :delete , turbo_confirm: 'Are you sure?' } %> 
</div>
<div>
<%= link_to "[ Create New Article ]", new_article_path %>
</div>

<div>
<%= @articles.each do |article| %>
  <h1><%= article.title %></h1>
  <h1><%= article.content %></h1>
  <%= link_to "[ Show ]", article_path(article) %>
  <%= link_to "[ Edit ]", edit_article_path(article) %>
  <%= link_to "[ Delete ]", article_path(article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
<% end %>
</div>
